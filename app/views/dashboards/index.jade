extends ../layouts/dashboard

block main
  .container-fluid.padder-v
    .row
      .col-sm-12.col-md-9.col-lg-10

        .published-position-block.m-b-xl
          div.block-title.m-t-sm
            h3.m-t-none
              i.fa.fa-cloud &nbsp;
              | Published Posisiton

          //- .panel.panel-default.m-b.b-dotted.b-2x.no-bg
          //-   .wrapper-lg.text-center
          //-     p.h4.text-gray.f-normal Published positions appear on your careers page and collect applications from candidates
          //-     p.h4.text-center
          //-       a(href="/jobs/create")
          //-        | Create a new position&nbsp;
          //-        i.fa.fa-chevron-right

          .panel.panel-default.m-b
            .m-t-sm.m-b-sm
              .col-md-10
                span.h4.m-t-none.inline.m-r-sm.job-title Software Engineer
                span.h5.inline.m-r-xs.job-division Engineer
                span.h5.inline.m-r-xs.job-location San Francisco
                span.h5.inline.m-r-xs.job-type Full Time

              .col-md-2.m-t-sm.text-right
                a.text-dark(href="#")
                  i.fa.fa-user &nbsp;
                  span.text-xs.f-bold.m-t-n-xs.count-applicant 2

                a.text-dark.m-l-sm(href="#")
                  i.fa.fa-user &nbsp;
                  span.text-xs.f-bold.m-t-n-xs.count-applicant 2
              .clearfix

            .b-t.b-b
              .col-md-2.text-center.f-bold.b-r
                .wrapper.process-source
                  span.count.f-bold.h3 2
                  strong.block SOURCE
              .col-md-2.text-center.b-r
                .wrapper.process-applied
                  span.count.f-bold.h3 2
                  strong.block APPLIED
              .col-md-2.text-center.b-r
                .wrapper.process-contacting
                  span.count.f-bold.h3 2
                  strong.block CONTACT
              .col-md-2.text-center.b-r
                .wrapper.process-interview
                  span.count.f-bold.h3 -
                  strong.block INTERVIEW
              .col-md-2.text-center.b-r
                .wrapper.process-offer
                  span.count.f-bold.h3 -
                  strong.block OFFER
              .col-md-2.text-center
                .wrapper.process-hired
                  span.count.f-bold.h3 -
                  strong.block HIRED
              .clearfix

            .wrapper-sm.bg-gray-lighter
              .row
                .col-md-9.col-lg-9.action-block
                  a.m-r-md(href="#")
                    i.fa.fa-eye &nbsp;
                    | View

                  a.m-r-md(href="#")
                    i.fa.fa-pencil &nbsp;
                    | Edit

                  a.m-r-md(href="#")
                    i.fa.fa-eye &nbsp;
                    | Upload Candidate

                  a.m-r-md.text-disabled(href="#")
                    i.fa.fa-bullhorn &nbsp;
                    | Advertiser

                  a.m-r-md.text-disabled(href="#")
                    i.fa.fa-bullhorn &nbsp;
                    | Reports

                  a.m-r-md(href="#")
                    i.fa.fa-eye &nbsp;
                    | Clone

                .col-md-3.col-lg-3.text-right.text-sm
                  strong.job-code ENG-SE
                  time.last-update.no-wrap updated 3 minutes ago
                .clearfix

        .closed-position-block.m-b-xl
          div.block-title.m-t-sm
            h3.m-t-none.text-danger
              i.fa.fa-lock &nbsp;
              | Closed Posisiton

          .panel.panel-default.m-b.b-dotted.b-2x.no-bg
            .wrapper-lg.text-center
              p.h4.text-gray.f-normal Posisiton that no longer accepting new applicants will appear here.


        .draft-position-block.m-b-xl
          div.block-title.m-t-sm
            h3.m-t-none.text-success
              i.fa.fa-edit &nbsp;
              | Drafts

          .panel.panel-default.m-b.b-dotted.b-2x.no-bg
            .wrapper-lg.text-center
              p.h4.text-gray.f-normal
                | Drafts are job positions you have not yet published.
                a(href="/jobs/create")
                 | Create a new position&nbsp;
                 i.fa.fa-chevron-right

          .panel.panel-default.m-b
            .m-t-sm.m-b-sm
              .col-md-10
