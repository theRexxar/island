        <div class="clearfix"></div>
      </div>

      <div class="b-t b-b">
        <div class="col-md-2 text-center f-bold b-r">
          <a href="/jobs/{{_id}}/browser/sourced" class="block wrapper process-source">
            <span class="count f-bold h3">2</span>
            <strong class="block">SOURCE</strong>
          </a>
        </div>

        <div class="col-md-2 text-center b-r"><a href="/jobs/{{_id}}/browser/applied" class="block wrapper process-applied"><span class="count f-bold h3">2</span><strong class="block">APPLIED</strong></a></div>
        <div class="col-md-2 text-center b-r"><a href="/jobs/{{_id}}/browser/phone-screen" class="block wrapper process-contacting"><span class="count f-bold h3">2</span><strong class="block">PHONE SCREEN</strong></a></div>
        <div class="col-md-2 text-center b-r"><a href="/jobs/{{_id}}/browser/interview" class="block wrapper process-interview"><span class="count f-bold h3">-</span><strong class="block">INTERVIEW</strong></a></div>
        <div class="col-md-2 text-center b-r"><a href="/jobs/{{_id}}/browser/offer" class="block wrapper process-offer"><span class="count f-bold h3">-</span><strong class="block">OFFER</strong></a></div>
        <div class="col-md-2 text-center"><a href="/jobs/{{_id}}/browser/offer" class="block wrapper process-hired"><span class="count f-bold h3">-</span><strong class="block">HIRED</strong></a></div>
        <div class="clearfix"></div>
      </div>


      <div class="wrapper-sm bg-gray-lighter">
        <div class="row">
          <div class="col-md-9 col-lg-9 action-block">
            <a href="/jobs/{{_id}}/preview?show_description=true" class="m-r-md">
              <i class="fa fa-eye">&nbsp;</i>VIEW
            </a>
            <a href="/jobs/{{_id}}/edit" class="m-r-md">
              <i class="fa fa-pencil">&nbsp;</i>EDIT
            </a>

            <a href="#" class="m-r-md">
              <i class="fa fa-cloud-upload">&nbsp;</i>UPLOAD CANDIDATES
            </a>

            <a href="#" class="m-r-md text-disabled">
              <i class="fa fa-bullhorn">&nbsp;</i>ADVERTISE
            </a>

            <a href="#" class="m-r-md text-disabled">
              <i class="fa fa-pie-chart">&nbsp;</i>REPORTS
            </a>

            <a href="/jobs/{{_id}}/clone" class="m-r-md">
              <i class="fa fa-copy">&nbsp;</i>CLONE
            </a>
          </div>

          <div class="col-md-3 col-lg-3 text-right text-sm"><strong class="job-code">ENG-SE</strong>
            <time class="last-update no-wrap">updated 3 minutes ago</time>
          </div>

          <div class="clearfix"></div>

        </div>
      </div>
    </div>

  script#jobDraftItemTemplate(type='text/html').
    <div class="panel panel-default m-b">
    {{#jobs}}
      <div class="position-item wrapper pos-rlt">
        <h4 class="m-t-none">{{name}}</h4>

        <span class="text-gray inline m-r-md">
          <i class="fa fa-sitemap">&nbsp;</i>{{#department}}{{department}}{{/department}}{{^department}}Not Defined{{/department}}
        </span>

        {{#locations}}
        <span class="text-gray">
          <i class="fa fa-map-marker">&nbsp;</i>{{state_code}}, {{country_code}}
        </span>
        {{/locations}}
        <div class="actions">
          <a href="/jobs/{{_id}}/preview?show_description=true">
            <i class="fa fa-eye">&nbsp;</i>VIEW
          </a>
          <a href="/jobs/{{_id}}/edit" class="inline m-l-md">
            <i class="fa fa-pencil">&nbsp;</i>EDIT</a>
          <a data-method="post" href="/jobs/{{_id}}/clone" rel="nofollow" class="inline m-l-md">
            <i class="fa fa-copy">&nbsp;</i>CLONE
          </a>
          <a data-confirm="Are you sure you want to delete this position?" data-method="delete" href="/jobs/{{_id}}/delete" rel="nofollow" class="inline m-l-md">
            <i class="fa fa-remove">&nbsp;</i>DELETE
          </a>
        </div>
      </div>
    {{/jobs}}
    </div>

